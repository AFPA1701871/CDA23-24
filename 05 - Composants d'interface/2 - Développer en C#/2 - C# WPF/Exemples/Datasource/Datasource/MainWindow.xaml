<Window x:Class="Datasource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Datasource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <DataGrid x:Name="dtgProduits" HorizontalAlignment="Left" Height="159" Margin="181,110,0,0" VerticalAlignment="Top" Width="409" AutoGenerateColumns="False" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Quantite" Binding="{Binding Quantite}"/>
                <DataGridTextColumn Header="Libelle du produit" Binding="{Binding LibelleProduit}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Remplir Grid" HorizontalAlignment="Left" Margin="33,110,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
